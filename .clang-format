# .clang-format - code formatting for ft_irc (C++98 compatible)
Language: Cpp                        # Define que o clang-format vai formatar C++
BasedOnStyle: Google                  # Usa o estilo Google como base

# Indentação
IndentWidth: 4                        # Cada nível de indentação usa 4 espaços
ContinuationIndentWidth: 4            # Indentação de linhas que continuam (ex: chamadas longas)
UseTab: Never                          # Usa apenas espaços (evita tabs que quebram indentação)
BreakBeforeBraces: Attach              # Mantém { na mesma linha da declaração
AllowShortFunctionsOnASingleLine: false
AllowShortIfStatementsOnASingleLine: false  # força corpo do if em múltiplas linhas

# Colunas e limites
ColumnLimit: 95                        # Limita linhas a 95 colunas
PointerAlignment: Left                 # Ponteiros ficam assim: int* ptr;

# Comentários
SpacesBeforeTrailingComments: 1        # 1 espaço antes de comentários
AlignTrailingComments: true            # Alinha todos na mesma coluna

# Alinhamento de assignments
AlignConsecutiveAssignments: true      # Alinha atribuições consecutivas
AlignConsecutiveDeclarations: true     # Alinha declarações consecutivas

# Outras opções úteis
ReflowComments: true                   # Reorganiza comentários longos
SortIncludes: false                    # Não altera ordem de includes
